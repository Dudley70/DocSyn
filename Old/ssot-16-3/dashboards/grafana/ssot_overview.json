{
  "title": "SSOT Overview",
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "query": "label_values(job)",
        "current": {
          "text": "prod",
          "value": "prod"
        }
      },
      {
        "name": "service",
        "type": "query",
        "query": "label_values(service)",
        "current": {
          "text": "gem",
          "value": "gem"
        }
      },
      {
        "name": "DS_PROM",
        "type": "datasource",
        "query": "prometheus"
      },
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "query": "loki"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests/s",
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\"}[5m]))",
          "datasource": {
            "type": "prometheus",
            "uid": "$DS_PROM"
          }
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Token usage",
      "targets": [
        {
          "expr": "sum(rate(gem_tokens_total{service=~\"$service\"}[5m]))",
          "datasource": {
            "type": "prometheus",
            "uid": "$DS_PROM"
          }
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "logs",
      "title": "Errors (Loki)",
      "targets": [
        {
          "expr": "{service=\"$service\"} |= \"error\"",
          "datasource": {
            "type": "loki",
            "uid": "$DS_LOKI"
          }
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 8
      }
    }
  ],
  "schemaVersion": 36,
  "version": 1
}